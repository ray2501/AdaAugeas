project AdaAugeas is
   for Library_Name     use "adaaugeas";
   for Library_Kind     use "dynamic";
   for Source_Dirs      use ("/usr/local/include" & "/adaaugeas");
   for Library_Dir      use "/usr/local/lib";
   for Library_ALI_Dir  use "/usr/local/lib" & "/adaaugeas";
   for Externally_Built use "true";
   package Linker is
      for Linker_Options use ("-lgnat", "-lgnarl");
   end Linker;
end AdaAugeas;

